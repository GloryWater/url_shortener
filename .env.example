# ===========================================
# URL Shortener Configuration v3.0
# ===========================================
# Copy this file to .env and configure settings
# ===========================================

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_NAME=URL Shortener
APP_VERSION=0.3.0
DEBUG=false
ENVIRONMENT=development

# Server host and port
HOST=0.0.0.0
PORT=8001

# -------------------------------------------
# Database Settings (PostgreSQL)
# -------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=6432
POSTGRES_DB=postgres

# Enable SQL query logging (true/false)
SQL_ECHO=false

# -------------------------------------------
# Redis Settings
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# TTL for cached URLs in seconds (default: 24 hours)
REDIS_TTL=86400

# -------------------------------------------
# CORS Settings
# -------------------------------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5500,http://localhost:8001,http://127.0.0.1:8001

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60
# Maximum requests per hour per IP
RATE_LIMIT_PER_HOUR=1000

# -------------------------------------------
# Slug Settings
# -------------------------------------------
# Length of generated slugs (4-12)
SLUG_LENGTH=6
# Maximum attempts to generate unique slug
SLUG_MAX_ATTEMPTS=5

# -------------------------------------------
# Security & Authentication
# -------------------------------------------
# IMPORTANT: Change this in production!
SECRET_KEY=change-me-in-production
# JWT settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# -------------------------------------------
# GeoIP Settings (Optional)
# -------------------------------------------
# Path to GeoIP2 database file (download from MaxMind)
# GEOIP_DB_PATH=/path/to/GeoLite2-City.mmdb
